<?xml version="1.0"?>
<ruleset name="WebAppick WPListInfo Coding Standard">
    <!-- Use the Codeat Coding Standard -->
    <rule ref="CodeatCodingStandard"/>

    <!-- Scan the src directory -->
    <file>src</file>

    <!-- Ignore vendor directory -->
    <exclude-pattern>vendor/*</exclude-pattern>

    <rule ref="WordPress">
        <!-- Exclude specific checks for variable and function names -->
        <exclude name="Squiz.NamingConventions.ValidVariableName.NotSnakeCase"/>
        <exclude name="Squiz.NamingConventions.ValidFunctionName.NotSnakeCase"/>
        <exclude name="WordPress.NamingConventions.ValidVariableName.VariableNotSnakeCase"/>
        <exclude name="WordPress.NamingConventions.ValidVariableName.UsedPropertyNotSnakeCase"/>
        <exclude name="PSR1.Methods.CamelCapsMethodName.NotCamelCaps"/>
    </rule>


    <!-- Optionally adjust severity and report -->
    <arg name="severity" value="5"/>
    <arg name="report" value="full"/>
    <arg name="colors"/>
</ruleset>